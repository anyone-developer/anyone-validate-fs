{
  "name": "@anyone-developer/anyone-validate-fs",
  "version": "1.0.1",
  "description": "This action help you to validate file structure as you expected. The validate rule will follow the brace-expansion.",
  "main": "index.js",
  "scripts": {
    "test": "node src/test.js",
    "xo": "xo",
    "xo-fix": "xo --fix",
    "build": "npm run build-action && npm run build-win && npm run build-macos && npm run build-linux",
    "build-action": "ncc build action.js --license LICENSE",
    "build-win": "pkg bin/anyone-validate-fs.js -t node12-win-x64 -o build/release/anyone-validate-fs-win",
    "build-macos": "pkg bin/anyone-validate-fs.js -t node12-macos-x64 -o build/release/anyone-validate-fs-macos",
    "build-linux": "pkg bin/anyone-validate-fs.js -t node12-linux-x64 -o build/release/anyone-validate-fs-linux"
  },
  "bin": {
    "anyone-validate-fs": "bin/anyone-validate-fs"
  },
  "repository": "git://github.com/anyone-developer/anyone-validate-fs.git",
  "keywords": [
    "cli",
    "anyone-validate-fs",
    "anyone-developer"
  ],
  "author": "Zhang Nan (zhang_nan_163@163.com)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/anyone-developer/anyone-validate-fs/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "homepage": "https://github.com/anyone-developer/anyone-validate-fs#readme",
  "dependencies": {
    "args": "^5.0.1",
    "braces": "^3.0.2",
    "chalk": "^4.1.0",
    "object-hash": "^2.0.3",
    "recursive-diff": "^1.0.8",
    "rrdir": "^8.2.0",
    "treeify": "^1.1.0",
    "tty-table": "^4.1.3"
  },
  "optionalDependencies": {
    "@actions/core": "^1.2.6"
  },
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.24.1",
    "pkg": "^4.4.9",
    "xo": "^0.34.1"
  }
}
